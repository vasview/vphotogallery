 <% if user_signed_in? %>
 	<h2>All my photos</h2>
	<p><%= link_to 'New photo', new_photo_path, class: 'btn btn-primary'%></p>


	<table class="table table-striped">
		<tr>
			<th>Title</th>
			<th>Photo</th>
			<th>Action<th>
		</tr>

		<% current_user.photos.each do |photo| %>
			<tr>
								
				<td><%= photo.caption %></td>
				
				<td><%= image_tag photo.image.url(:small) %></td>
				
				<td>
					<%= link_to 'View', photo_path(photo) %>
					<%= link_to 'Delete', photo_path(photo), method: :delete, data: {confirm: 'Are you sure you that you want to delete this photo?'} %>
				</td>
			</tr>	
		<% end %>
	</table>

<% else %>
	<h2>All photos</h2>
	<div class="row">
		<div class="col-sm-4"
			<% @photos.each do |photo| %>
			<div><%= photo.caption %></div>
				
			<div><%= image_tag photo.image.url(:small) %></div>
				by <%= photo.user.name %>

		<% end %>
<% end %>

