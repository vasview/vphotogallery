<%= form_for [@photo, @photo.ucomments.build], remote: true do |f| %>
    
   <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.label :score %>
      <%= f.select :score, options_for_select(['1', '2', '3', '4', '5']), :prompt => "Select one" %>
   </p>
   <p>
      <%= f.submit %>
   </p>
<% end %>